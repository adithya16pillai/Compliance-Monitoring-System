# Compliance Monitoring System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API KEYS (Optional - for enhanced AI-powered analysis)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database file path (relative to project root)
DATABASE_URL=sqlite:///./compliance.db

# For PostgreSQL (uncomment and configure if needed):
# DATABASE_URL=postgresql://username:password@localhost:5432/compliance_db

# For MySQL (uncomment and configure if needed):
# DATABASE_URL=mysql://username:password@localhost:3306/compliance_db

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Enable debug mode (set to False in production)
DEBUG=True

# Maximum file size for uploads (in bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=pdf,docx,txt

# =============================================================================
# API CONFIGURATION
# =============================================================================
# FastAPI server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit configuration
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for session management (generate a strong random key)
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/compliance_monitor.log

# =============================================================================
# ML/AI MODEL SETTINGS
# =============================================================================
# Hugging Face model cache directory
TRANSFORMERS_CACHE=./cache/transformers

# ChromaDB persistent directory
CHROMADB_PERSIST_DIR=./chroma_db

# Confidence threshold for flagging violations
CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# CLOUD STORAGE (Optional - if using cloud storage for documents)
# =============================================================================
# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket_name
# AWS_REGION=us-east-1

# Azure Blob Storage Configuration
# AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
# AZURE_CONTAINER_NAME=your_container_name

# Google Cloud Storage Configuration
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
# SMTP configuration for sending compliance alerts
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@example.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_USE_TLS=True

# =============================================================================
# MONITORING AND ANALYTICS (Optional)
# =============================================================================
# Application performance monitoring
# SENTRY_DSN=your_sentry_dsn_url

# Analytics tracking
# GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set to True in production
# PRODUCTION=False

# Database connection pool settings (for production)
# DB_POOL_SIZE=5
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600